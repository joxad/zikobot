<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_sound" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BB000000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/iv_intro"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/zikobot_large" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_intro">

                <ImageView
                    android:id="@+id/iv_triangle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:rotation="-90"
                    android:src="@drawable/triangle" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_triangle">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_medium"
                        android:text="@string/view_pager_2_title" />

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/cv_title"
                    android:layout_alignStart="@id/cv_title"
                    android:layout_below="@id/cv_title"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/spotify_logo" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_below="@id/cv_title"
                        android:src="@drawable/logo_deezer" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="@string/view_pager_2"
            android:textColor="@android:color/white"
            android:textSize="25sp" />
    </LinearLayout>

</RelativeLayout>